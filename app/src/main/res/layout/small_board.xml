<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/letter_background"
    android:elevation="@dimen/elevation_low"
    android:padding="@dimen/small_board_padding"
    tools:context=".ScroggleActivity">

    <Button android:id="@+id/small1" style="@style/LetterButton"
        android:layout_column="0" android:layout_row="0"
        android:elevation="7dp"
        android:visibility="visible" />
    <Button android:id="@+id/small2" style="@style/LetterButton"
        android:layout_column="1" android:layout_row="0"/>
    <Button android:id="@+id/small3" style="@style/LetterButton"
        android:layout_column="2" android:layout_row="0"/>
    <Button android:id="@+id/small4" style="@style/LetterButton"
        android:layout_column="0" android:layout_row="1"/>
    <Button android:id="@+id/small5" style="@style/LetterButton"
        android:layout_column="1" android:layout_row="1"/>
    <Button android:id="@+id/small6" style="@style/LetterButton"
        android:layout_column="2" android:layout_row="1"/>
    <Button android:id="@+id/small7" style="@style/LetterButton"
        android:layout_column="0" android:layout_row="2"/>
    <Button android:id="@+id/small8" style="@style/LetterButton"
        android:layout_column="1" android:layout_row="2"/>
    <Button android:id="@+id/small9" style="@style/LetterButton"
        android:layout_column="2" android:layout_row="2"/>

</GridLayout>
