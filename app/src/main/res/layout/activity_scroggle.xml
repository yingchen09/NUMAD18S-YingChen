<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ScroggleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragment_scroggle"
            class="edu.neu.madcouse.yingchen.numad18s_yingchen.ScroggleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_scroggle"/>

        <fragment
            android:id="@+id/fragment_scroggle_control"
            class="edu.neu.madcouse.yingchen.numad18s_yingchen.ScroggleControlFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_scroggle_control"/>

    </LinearLayout>

</FrameLayout>